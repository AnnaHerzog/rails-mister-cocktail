<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=825&q=80);">

  <h1> <strong>It's Cocktailicoussssss</strong> </h1>
  <p>All your favourite cocktails!</p>
  <%=link_to" Create a new cocktail ", new_cocktail_path, :class => "btn btn-outline-light" %>
</div>



<!-- <h1 >Browse through your favourite cocktails!</h1> -->

<div class="cards">

  <%@cocktails.each do |cocktail|%>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=401&q=80)">
    <div class="card-product-infos">
      <%=link_to cocktail.name, cocktail_path(cocktail) %> | <%=link_to cocktail_path(cocktail), method: :delete,
      data: { confirm: "Do you really want to delete this cocktail?"} do %>
      <i class="far fa-trash-alt"></i>
      <% end %>

    </div>
  </div>
  <%end%>

</div>




