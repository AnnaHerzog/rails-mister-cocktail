<div class="container">
<h1><%=@cocktail.name%></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<h4>Ingredients:</h4>
<ul>
<% @cocktail.doses.each do |dose| %>
<li>  <%= dose.description%> of <%=dose.ingredient.name %></li>
<p> <%=link_to "delete", dose_path(dose), method: :delete,
      data: { confirm: "Do you really want to delete this cocktail?"} %>
      </p>
<% end %>
</ul>

<h4>Add an ingredient:</h4>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <!-- [...] -->
  <!-- [...] -->
  <%= f.submit "add", class: "btn btn-primary" %>
<% end %>


<%= link_to "return to all cocktails", cocktails_path, class: "btn btn-outline-dark" %>
</div>
